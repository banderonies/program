import tkinter as tk

# Create the main window
root = tk.Tk()
root.title("Centered Box")

# Set the size of the window
window_width = 300
window_height = 300
root.geometry(f"{window_width}x{window_height}")

# Create a canvas to draw the box
canvas = tk.Canvas(root, width=window_width, height=window_height)
canvas.pack()

# Calculate the coordinates for the centered box
box_size = 50
x0 = (window_width - box_size) / 2
y0 = (window_height - box_size) / 2
x1 = x0 + box_size
y1 = y0 + box_size

# Draw the box
canvas.create_rectangle(x0, y0, x1, y1, fill="blue")

# Run the Tkinter event loop
root.mainloop()
